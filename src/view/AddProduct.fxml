               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="478.0" prefHeight="614.0" prefWidth="404.0" spacing="10.0">
